<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane onKeyPressed="#keyPressed" prefHeight="525.0" prefWidth="797.0" styleClass="container"
            stylesheets="@../css/main.css, @../css/base.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vvmarkets.controllers.MainController">
    <HBox style="-fx-background-color: red" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0"/>
    <TabPane fx:id="mainTabPane" prefHeight="200.0" prefWidth="200.0" styleClass="mainTabPane"
             AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="250.0"
             AnchorPane.topAnchor="180.0">
    </TabPane>
    <VBox alignment="TOP_CENTER" maxWidth="250" minWidth="250" spacing="10" style="-fx-background-color: yellow"
          AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="180.0">
        <ImageView fx:id="mainProductImage" fitHeight="240" fitWidth="240" style="-fx-background-color: #fff">
            <image>
                <Image url="@../images/no_image.png"/>
            </image>
        </ImageView>
        <Label fx:id="lblTotal" maxHeight="150" maxWidth="240" minHeight="100" minWidth="240"
               style="-fx-background-color: #000"/>
       <HBox alignment="CENTER" maxWidth="240" minWidth="240" spacing="10">
          <Button styleClass="action-buttons, btn-blue"></Button>
          <Button styleClass="action-buttons, btn-blue"></Button>
          <Button styleClass="action-buttons, btn-blue"></Button>
       </HBox>
       <HBox  alignment="CENTER" maxWidth="240" minWidth="240" spacing="10">
          <Button styleClass="action-buttons, btn-blue"></Button>
          <Button styleClass="action-buttons, btn-blue"></Button>
       </HBox>
       <Button fx:id="btnConfirm" />
    </VBox>
    <Button fx:id="mainBtnNewTab" alignment="CENTER" layoutX="739.0" layoutY="8.0" mnemonicParsing="false"
            prefHeight="45.0" prefWidth="45.0" styleClass="roundedButton" text="+" textAlignment="CENTER"
            textOverrun="CLIP" AnchorPane.rightAnchor="7.0" AnchorPane.topAnchor="7.0"/>
    <Button fx:id="mainBtnExit" alignment="CENTER" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
            prefHeight="45.0" prefWidth="45.0" styleClass="roundedButton" text="+" textAlignment="CENTER"
            textOverrun="CLIP" AnchorPane.leftAnchor="7.0" AnchorPane.topAnchor="7.0"/>
    <Button fx:id="btnCloseTab" alignment="CENTER" layoutX="62.0" layoutY="7.0" mnemonicParsing="false"
            prefHeight="45.0" prefWidth="45.0" styleClass="roundedButton" textAlignment="CENTER"
            AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="7.0">
    </Button>
</AnchorPane>
